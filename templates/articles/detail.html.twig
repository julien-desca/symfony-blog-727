{% extends 'base.html.twig' %}

{% block title %} details de l'article #{{ article.id }} {% endblock %}

{% block body %}
    <h1>{{ article.title }}</h1>
    <p>{{ article.content }}</p>
    <p>Ecrit par : {{ article.author.firstName }} {{ article.author.lastName }}</p>
    <ul>
        {% for category in article.categories %}
            <li>{{category.name}}</li>
        {% endfor %}
    </ul>

    <hr/>

    <div class="row">
        <div class="col-6">
            <div>
            {% for comment in article.comments %}
                <h5>{{ comment.authorName }}
                    le {{ comment.createdAt|date('d/m/Y') }} 
                    Ã  {{ comment.createdAt|date('h:i') }}</h5>
                <p>{{ comment.content }}</p>    
            {% endfor %}
            </div>
        </div>
        <div class="col-6">
            <h2>Nouveau commentaire</h2>
            {{form(form)}}
        </div>
    </div>
    <hr/>

    <a class="btn btn-warning" href={{ path('update_article', {id: article.id}) }}>Modifier l'article</a>
{% endblock %}